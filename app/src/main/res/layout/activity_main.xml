<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#333947">


    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1">


    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153">


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="400px"
            android:text="username"
            android:textSize="150px"
            android:paddingBottom="20px"
            android:paddingLeft="50px"
            android:textColor="#929aad"
            />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <Button
                android:id="@+id/gameListButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_border"
                android:backgroundTint="#878787"

                android:text="Games: 0"

                android:textAlignment="textStart"
                android:textSize="90px">


            </Button>


            <Button
                android:id="@+id/extensionListButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_border"
                android:text="Expansions: 0"
                android:textAlignment="textStart"


                android:textSize="90px"></Button>






        </TableLayout>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Last synchronization"
            android:textColor="@color/white"
            android:textSize="32dp"


            >

        </TextView>

        <TextView
            android:id="@+id/dateLastSyncMain"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-01-2000 00:00:00"
            android:textColor="@color/white"
            android:textSize="25dp"
            >

        </TextView>
        <Button

            android:id="@+id/syncButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Synchronization"

            android:textSize="25dp">

        </Button>

        <Button
            android:id="@+id/cleanButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Clean data"

            android:textSize="25dp">

        </Button>


    </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>